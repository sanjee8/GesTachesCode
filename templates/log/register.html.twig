{% extends 'template/log.html.twig' %}

{% set active_page = 'register' %}
{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="row">
        <div class="login-block col-5 offset-1" id="banner">
            <div class="row">
                <div>
                    <h1>S'inscrire</h1>

                    {{ form_start(form) }}


                    <div class="error-log">
                        {{ form_errors(form) }}
                    </div>


                    <div class="form-group inputGroup-style name-style">
                        {{ form_widget(form.firstname, { 'attr': {'class':'form-control input-style', 'placeholder' : 'Entrez votre prénom'}}) }}

                        {{ form_widget(form.lastname, { 'attr': {'class':'form-control input-style', 'placeholder' : 'Entrez votre nom'}}) }}

                    </div>

                    <div class="form-group inputGroup-style">
                        {{ form_widget(form.email, { 'attr': {'class':'form-control input-style', 'placeholder' : 'Entrez votre adresse email'}}) }}
                    </div>
                    <div class="form-group inputGroup-style">
                        {{ form_widget(form.password, { 'attr': {'class':'form-control input-style', 'placeholder' : 'Entrez votre mot de passe'}}) }}
                    </div>

                    <div class="form-group inputGroup-style">


                        {{ form_widget(form.check_password, { 'attr': {'class':'form-control input-style', 'placeholder' : 'Confirmez votre mot de passe'}}) }}

                    </div>


                    <div class="mt-4">
                        <a class="notRegister-style" href="{{ path("login") }}">Vous êtes déjà inscrit ?</a>
                        <button type="submit" class="btn btn-primary submit-style float-end">Inscription</button>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}